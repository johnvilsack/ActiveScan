<?xml version='1.0' encoding='utf-8'?>
<widget id="com.activescan.activescanapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>ActiveScan</name>
	<description>
		ActiveScan is a WebView tool with integrated Linea drivers
	</description>
	<author email="vilsack@gmail.com" href="www.johnvilsack.com">
		John Vilsack
	</author>
	<content src="index.html" />
	<plugin name="cordova-plugin-whitelist" version="1" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<icon src="icon.png" />
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
		<preference name="StatusBarOverlaysWebView" value="false" />
		<preference name="StatusBarBackgroundColor" value="#000000" />
		<preference name="StatusBarStyle" value="blackopaque" />
		<preference name="orientation" value="portrait" />
		<preference name="target-device" value="handset" />
		<preference name="fullscreen" value="true" />
		<preference name="webviewbounce" value="false" />
		<preference name="prerendered-icon" value="true" />
		<preference name="stay-in-webview" value="true" />
		<preference name="ios-statusbarstyle" value="default" />
		<preference name="detect-data-types" value="false" />
		<preference name="show-splash-screen-spinner" value="true" />
		<preference name="auto-hide-splash-screen" value="false" />
		<preference name="disable-cursor" value="false" />
		<preference name="BackupWebStorage" value="local"/>
		<splash height="480" src="splash.png" width="320" />
		<splash height="960" src="splash.png" width="640" />
		<splash height="1024" src="splash.png" width="768" />
		<splash height="2048" src="splash.png" width="1536" />
		<splash height="768" src="splash.png" width="1024" />
		<splash height="1536" src="splash.png" width="2048" />
		<splash height="1136" src="splash.png" width="640" />
		<splash height="1334" src="splash.png" width="750" />
		<splash height="2208" src="splash.png" width="1242" />
		<splash height="1242" src="splash.png" width="2208" />
	</platform>
</widget>
